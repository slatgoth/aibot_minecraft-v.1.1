{
  "name": "minecraft-llm-bot",
  "version": "1.2.0",
  "description": "Minecraft bot based on Mineflayer and Ollama (DeepSeek)",
  "author": "slatgoth <slatgoth@gmail.com>",
  "main": "electron/main.js",
  "scripts": {
    "start": "node src/index.js",
    "app": "electron electron/main.js",
    "dist": "electron-builder --win --x64"
  },
  "dependencies": {
    "mineflayer": "^4.20.1",
    "mineflayer-pathfinder": "^2.4.5",
    "mineflayer-pvp": "^1.3.2",
    "mineflayer-armor-manager": "^1.4.0",
    "mineflayer-auto-eat": "^3.3.1",
    "mineflayer-collectblock": "^1.5.0",
    "mineflayer-tool": "^1.2.0",
    "ollama": "^0.5.0",
    "winston": "^3.11.0",
    "chalk": "^4.1.2"
  },
  "devDependencies": {
    "electron": "^30.1.2",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.slatgoth.minecraft-llm-bot",
    "productName": "Minecraft LLM Bot",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/**",
      "src/**",
      "prompts/**",
      "data/**",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "tools/viaproxy",
        "to": "viaproxy"
      }
    ],
    "win": {
      "signAndEditExecutable": false,
      "target": [
        "portable"
      ]
    }
  }
}
